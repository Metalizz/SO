//script Este programa cuenta del 10 a 1 donde suma los números pares y números impares

x=10
res=0
par=0
impar=0

while [ $x -ne 0 ]
do

echo $x

if [ $(($x%2)) -eq 0 ]
then

par=$(($par+$x))
else
impar=$(($impar+$x))

fi

x=`expr $x - 1`

done
echo $par es Total De Pares
echo $impar es Total De Impares



